{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "go test",
      "type": "shell",
      "command": "go",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "go test verbose",
      "type": "shell",
      "command": "go",
      "args": ["test", "-v"],
      "group": "test"
    },
    {
      "label": "go test bench",
      "type": "shell",
      "command": "go",
      "args": ["test", "-v", "--bench", ".", "--benchmem"],
      "group": "test"
    }
    {
      "label": "go run",
      "type": "shell",
      "command": "go run .",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
